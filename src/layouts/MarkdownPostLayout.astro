---
import type { CollectionEntry } from 'astro:content';
import Layout from './Layout.astro';
import { fade } from "astro:transitions";
import { Text, Badge, Flex } from '@radix-ui/themes';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
---
<Layout title={post.data.title}>
  <Text>{post.data.pubDate.toString().slice(0,10)}</Text>
  <Text  transition:animate={fade({ duration: '1s' })}><em>{post.data.description}</em></Text>
  <Text>Written by: {post.data.author}</Text>
  <!-- <img src={post.data.image.url} width="300" alt={post.data.image.alt} /> -->
  <Flex gap="2">
    {post.data.tags.map((tag) => (
      <Badge href={`/tags/${tag}`}>{tag}</Badge>
    ))}
  </Flex>
  <slot />
</Layout>
